<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielcustodio.minhaexercicio.EscolhaFilme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:background="@drawable/ic_carrinho"
            android:id="@+id/carrrinho_notifi"/>

        <EditText
            android:id="@+id/textoPesquisaEscolhaFilme"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu filme"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableRight="@drawable/ic_search_black_24dp"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="Capitão America - Guerra Civil"
        android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar1"
            android:background="#00FF7F"
            />

            <ImageButton
                android:layout_marginLeft="160dp"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_action_content_add_circle"
                android:id="@+id/botao_carrinho1"/>


        </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Esquadrão Suicida"
        android:textSize="21dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar2"
            android:background="#00FF7F"
            />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_action_content_add_circle"
            android:id="@+id/botao_carrinho2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="Batman vs Superman"
            android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar3"
            android:background="#00FF7F"
            />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_action_content_add_circle"
            android:id="@+id/botao_carrinho3"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="Ben-Hur"
            android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar4"
            android:background="#00FF7F"
            />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_action_content_add_circle"
            android:id="@+id/botao_carrinho4"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="Indenpendence Day"
            android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar5"
            android:background="#00FF7F"
            />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_action_content_add_circle"
            android:id="@+id/botao_carrinho5"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="Survivor"
            android:textSize="21dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Comprar"
            android:layout_marginTop="5dp"
            android:id="@+id/botao_comprar6"
            android:background="#00FF7F"
            />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_action_content_add_circle"
            android:id="@+id/botao_carrinho6"/>

        </LinearLayout>


</LinearLayout>





</RelativeLayout>
